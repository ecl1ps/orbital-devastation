<UserControl x:Class="Orbit.Gui.FindServerUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600">
    <Grid Width="603">
        <Border BorderBrush="Silver" BorderThickness="1" Height="300" HorizontalAlignment="Left" Name="borderLeft" VerticalAlignment="Top" Width="300">
            <Grid HorizontalAlignment="Center">
                <ListBox Height="146" Margin="0,80,0,0" Name="lbxFoundServers" VerticalAlignment="Top" Width="260" MouseDoubleClick="lbxFoundServers_MouseDoubleClick" />
                <Button Content="Find LAN Servers" Height="22" Margin="0,40,0,0" Name="btnFindServers" VerticalAlignment="Top" Width="134" Click="btnFindServers_Click" />
            </Grid>
        </Border>
        <Border BorderBrush="Silver" BorderThickness="1" Height="300" HorizontalAlignment="Right" Name="borderRight" VerticalAlignment="Top" Width="300" >
            <Grid  HorizontalAlignment="Center">
                <Button Content="Connect to Server" Height="22" Margin="0,151,0,0" Name="btnDirectConnect" VerticalAlignment="Top" Width="132" Click="btnDirectConnect_Click" />
                <TextBox Height="24" HorizontalAlignment="Left" Margin="0,113,0,0" Name="tbServerAddress" VerticalAlignment="Top" Width="132" Text="127.0.0.1" KeyDown="tbServerAddress_KeyDown" />
                <Label Content="IP or domain address" Height="23" HorizontalAlignment="Left" Margin="0,84,0,0" Name="label1" VerticalAlignment="Top" Width="132" />
                <Label Content="" Height="27" HorizontalAlignment="Left" Margin="0,56,0,0" Name="lblAddressStatus" VerticalAlignment="Top" Width="132" FontStyle="Normal" />
            </Grid>
        </Border>
        
    </Grid>
</UserControl>
