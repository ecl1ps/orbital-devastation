<UserControl x:Class="Orbit.Gui.ColorPickerUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Name="colorPicker" mc:Ignorable="d" Style="{StaticResource optionsStyle}">
    <Grid>
        <ScrollViewer Height="150" Width="256" Margin="0,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto">
            <WrapPanel Width="240" Name="spColors" Orientation="Horizontal" Background="#DD585454" />
        </ScrollViewer>
        <Button Content="Ok" Margin="175,300,53,0" Name="btnOk" Click="btnOk_Click" Width="120" />
        <Button Content="Cancel" Margin="51,300,176,0" Name="btncancel" Click="btncancel_Click" Width="120" />
        <Grid Height="60" HorizontalAlignment="Left" Margin="55,208,0,0" Name="baze" VerticalAlignment="Top" Width="240" ></Grid>
    </Grid>
</UserControl>
