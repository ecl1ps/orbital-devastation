<UserControl x:Class="Orbit.Gui.ColorPickerUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             BorderBrush="Black" BorderThickness="1" Name="colorPicker">
    <Grid Width="350" Height="350" Background="#FF6F6F6F">
        <ScrollViewer Height="150" Width="256" Margin="0,30,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto">
            <WrapPanel Width="240" Name="spColors" Orientation="Horizontal" Background="#DD585454" />
        </ScrollViewer>
        <Button Content="Ok" FontFamily="Bauhaus 93" Height="31" HorizontalAlignment="Center" Margin="156,300,40,0" Name="btnOk" VerticalAlignment="Top" Width="84" Click="btnOk_Click" />
        <Button Content="Cancel" FontFamily="Bauhaus 93" Height="31" HorizontalAlignment="Center" Margin="40,300,156,0" Name="btncancel" VerticalAlignment="Top" Width="84" Click="btncancel_Click" />
        <Grid Height="60" HorizontalAlignment="Left" Margin="55,208,0,0" Name="baze" VerticalAlignment="Top" Width="240" ></Grid>
    </Grid>
</UserControl>
