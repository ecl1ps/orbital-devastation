<UserControl x:Class="Orbit.Gui.EndGameStats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800" Name="EndGameStatistics">
    <Canvas Name="Root" Background="#B4808080" Height="500" Width="800">
        <Label Content="Statistics for the last game" FontSize="20" FontWeight="Bold" Canvas.Left="12" Canvas.Top="12" Width="630" />
        <TextBlock Name="Time" FontSize="18" FontWeight="Bold" Canvas.Left="710" Canvas.Top="12" RenderTransformOrigin="0.5,0.5" Width="80" />
        <Button Canvas.Left="680" Canvas.Top="462" Click="Button_Click">Close</Button>
        <Image Panel.ZIndex="-1" Width="200" Source="pack://application:,,,/resources/images/background/singularity-sign.png" Canvas.Left="27" Canvas.Top="269">
            <Image.RenderTransform>
                <RotateTransform CenterX="100" CenterY="100" Angle="25" />
            </Image.RenderTransform>
        </Image>
    </Canvas>
</UserControl>
