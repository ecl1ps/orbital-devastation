<UserControl x:Class="Orbit.Gui.ColorItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="30">
    <Border BorderBrush="Black" BorderThickness="1" Name="border" Width="30" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left">
        <Grid Name="grid" Width="30" Height="30" MouseDown="ColorItem_MouseDown"></Grid>
    </Border>
</UserControl>
