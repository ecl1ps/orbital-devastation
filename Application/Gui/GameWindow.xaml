<Window x:Class="Orbit.Gui.GameWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Orbit.Gui"
             Closing="OnClose" Name="mainWindow"
             WindowStyle="ThreeDBorderWindow" Title="Orbital Devastation" WindowStartupLocation="CenterScreen" KeyDown="OnKeyDown" Icon="/OrbitalDevastation;component/resources/images/rock/rock_normal_6.png"
             Width="1014" Height="740" KeyUp="OnKeyUp" Deactivated="mainWindow_Deactivated" Activated="mainWindow_Activated" Loaded="mainWindow_Loaded">

    <Grid Name="mainContainerGrid" SizeChanged="OnSizeChanged">
        <Grid.LayoutTransform>
            <ScaleTransform x:Name="ApplicationScaleTransform"
                        CenterX="0"
                        CenterY="0"
                        ScaleX="{Binding ElementName=mainWindow, Path=ScaleValueX}"
                        ScaleY="{Binding ElementName=mainWindow, Path=ScaleValueY}" />
        </Grid.LayoutTransform>
        <Grid Name="mainGrid" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <controls:MainUC />
        </Grid>
        <Grid Name="menuGrid" VerticalAlignment="Center" HorizontalAlignment="Center" ></Grid>
    </Grid>
</Window>
