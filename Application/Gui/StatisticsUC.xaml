<UserControl x:Class="Orbit.Gui.StatisticsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" x:Name="statisticsWindow"
             d:DesignWidth="1000" d:DesignHeight="700" >

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Name="lblTitle" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="400" Margin="0,36,0,507" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" >Player Statistics</Label>
        <Label Name="lblHighScoreCaption" Width="150" Margin="0,153,0,468" FontSize="22" HorizontalAlignment="Left" VerticalAlignment="Center" >HighScores</Label>
        <Border BorderThickness="1" BorderBrush="{StaticResource darkPurpleBrush}"  HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,197,0,265" CornerRadius="0">
            <Grid Width="400" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Label Name="lblHSText1">Solo vs. SimpleBot:</Label>
                    <Label Name="lblHSText2">Solo vs. Bot2:</Label>
                    <Label Name="lblHSText3">Solo vs. Bot3:</Label>
                    <Label Name="lblHSText4">Solo vs. Bot4:</Label>
                    <Label Name="lblHSText5">Solo vs. Bot5:</Label>
                    <Label Name="lblHSText6">1v1 Quick Game:</Label>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <Label Name="lblHS1">0</Label>
                    <Label Name="lblHS2">0</Label>
                    <Label Name="lblHS3">0</Label>
                    <Label Name="lblHS4">0</Label>
                    <Label Name="lblHS5">0</Label>
                    <Label Name="lblHS6">0</Label>
                </StackPanel>
            </Grid>
        </Border>
        <Button Content="Close" Margin="0,636,0,0" Name="btnClose" Click="btnClose_Click" />
    </Grid>
</UserControl>
