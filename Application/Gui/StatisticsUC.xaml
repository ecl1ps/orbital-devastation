<UserControl x:Class="Orbit.Gui.StatisticsUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" x:Name="statisticsWindow"
             d:DesignWidth="1000" d:DesignHeight="700" Width="1000" Height="700" >

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label Name="lblTitle" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="550" Margin="0,36,0,507" FontFamily="Bauhaus 93" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" >Player Statistics</Label>
        <Grid Width="550" Margin="0,200,0,100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Label Name="lblHSText1" FontFamily="Bauhaus 93" FontSize="20" >HighScore Solo vs. SimpleBot:</Label>
                <Label Name="lblHSText2" FontFamily="Bauhaus 93" FontSize="20" >HighScore Solo vs. Bot2:</Label>
                <Label Name="lblHSText3" FontFamily="Bauhaus 93" FontSize="20" >HighScore Solo vs. Bot3:</Label>
                <Label Name="lblHSText4" FontFamily="Bauhaus 93" FontSize="20" >HighScore Solo vs. Bot4:</Label>
                <Label Name="lblHSText5" FontFamily="Bauhaus 93" FontSize="20" >HighScore Solo vs. Bot5:</Label>
                <Label Name="lblHSText6" FontFamily="Bauhaus 93" FontSize="20" >HighScore 1v1 Quick Game:</Label>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <Label Name="lblHS1" FontFamily="Bauhaus 93" FontSize="20" >0</Label>
                <Label Name="lblHS2" FontFamily="Bauhaus 93" FontSize="20" >0</Label>
                <Label Name="lblHS3" FontFamily="Bauhaus 93" FontSize="20" >0</Label>
                <Label Name="lblHS4" FontFamily="Bauhaus 93" FontSize="20" >0</Label>
                <Label Name="lblHS5" FontFamily="Bauhaus 93" FontSize="20" >0</Label>
                <Label Name="lblHS6" FontFamily="Bauhaus 93" FontSize="20" >0</Label>
            </StackPanel>
        </Grid>
        <Button Content="Close" Height="28" HorizontalAlignment="Center" Margin="0,636,0,0" FontFamily="Bauhaus 93" FontSize="16" Name="btnClose" VerticalAlignment="Top" Width="129" Click="btnClose_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1" />
                    <GradientStop Color="#80FFFFFF" Offset="0" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</UserControl>
