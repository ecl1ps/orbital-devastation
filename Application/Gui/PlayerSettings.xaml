<UserControl x:Class="Orbit.Gui.PlayerSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Name="playerSettings" mc:Ignorable="d" Style="{StaticResource optionsStyle}" LostFocus="playerSettings_LostFocus">             

    <Grid>
        <Button Content="Save name" Margin="248,34,10,0" Name="btnSaveName" Click="btnSaveName_Click" />
        <Label Content="Player name:" Margin="12,34,0,0" Name="lblName" />
        <TextBox Height="30" HorizontalAlignment="Stretch" Margin="110,34,126,0" Name="tbPlayerName" FontSize="14" MaxLength="10" />
        <Label Content="Player color:" Margin="10,80,0,0" Name="lblColor" />
        <Border Width="112" Height="31" BorderThickness="1" Name="colorPickerField" HorizontalAlignment="Left" VerticalAlignment="Top" CornerRadius="0" BorderBrush="black" Margin="110,80,0,0" Background="Blue" MouseDown="colorPicker_MouseDown" />

        <Button Content="Back" Margin="0,0,0,30" VerticalAlignment="Bottom"  Name="btnBack" Click="btnBack_Click" />
    </Grid>
</UserControl>
