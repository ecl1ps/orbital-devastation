<UserControl x:Class="Orbit.Gui.PlayerSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Name="playerSettings" mc:Ignorable="d" Style="{StaticResource optionsStyle}" LostFocus="playerSettings_LostFocus">             

    <Grid>
        <Label Content="Player name:" Margin="7,33,181,284" Name="lblName" />
        <TextBox Height="30" HorizontalAlignment="Stretch" Margin="167,34,60,0" Name="tbPlayerName" MaxLength="10" />
        <Label Content="Player color:" Margin="7,73,186,244" Name="lblColor" />
        <Border Width="121" Height="31" BorderThickness="1" Name="colorPickerField" HorizontalAlignment="Left" VerticalAlignment="Top" CornerRadius="0" BorderBrush="black" Margin="167,73,0,0" Background="Blue" MouseDown="colorPicker_MouseDown" />

        <Button Content="Back" Margin="0,0,0,30" VerticalAlignment="Bottom"  Name="btnBack" Click="btnBack_Click" />
    </Grid>
</UserControl>
