<UserControl x:Class="Orbit.Gui.LobbyUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Orbit.Gui"
             mc:Ignorable="d" x:Name="lobbyWindow"
             d:DesignWidth="1000" d:DesignHeight="700" Width="1000" Height="700" Loaded="lobbyWindow_Loaded">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="700" Width="900">
        <Grid.RowDefinitions>
            <RowDefinition Height="139*" />
            <RowDefinition Height="561*" />
        </Grid.RowDefinitions>
        <Label Name="lblTitle" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="419" Margin="0,80,0,551" FontFamily="Bauhaus 93" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.RowSpan="2">Game Match Lobby</Label>
        <StackPanel Name="spPlayers"  Background="#7D91A0A3" Margin="10,31,370,260" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1">
            <controls:LobbyPlayer Width="520" Height="45" />
            <controls:LobbyPlayer Width="520" Height="45"/>
            <controls:LobbyPlayer Width="520" Height="45"/>
            <controls:LobbyPlayer Width="520" Height="45"/>
        </StackPanel>
        <StackPanel Name="spGameInfo" Background="#0D3D98AA" Margin="555,31,10,260" Grid.Row="1" />
        <ListView Height="148" HorizontalAlignment="Left" Margin="12,367,0,0" Name="lvChat" VerticalAlignment="Top" Width="879" Grid.Row="1" />
        <Button Content="Start Game" Height="28" HorizontalAlignment="Center" Margin="226,316,545,0" FontFamily="Bauhaus 93" FontSize="16" Name="btnStartGame" VerticalAlignment="Top" Width="129" Click="btnStartGame_Click" IsEnabled="False" Grid.Row="1">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1" />
                    <GradientStop Color="#80FFFFFF" Offset="0" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Ready" Height="28" HorizontalAlignment="Center" Margin="226,316,545,0" FontFamily="Bauhaus 93" FontSize="16" Name="btnReady" VerticalAlignment="Top" Width="129" Click="btnReady_Click" Grid.Row="1">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1" />
                    <GradientStop Color="#80FFFFFF" Offset="0" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Leave room" Height="28" HorizontalAlignment="Center" Margin="660,316,110,0" FontFamily="Bauhaus 93" FontSize="16" Name="btnLeave" VerticalAlignment="Top" Width="129" Click="btnLeave_Click" Grid.Row="1">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1" />
                    <GradientStop Color="#80FFFFFF" Offset="0" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBox Height="22" HorizontalAlignment="Left" Margin="12,523,0,0" Name="tbMessage" VerticalAlignment="Top" Width="731" KeyDown="tbMessage_KeyDown" Grid.Row="1" />
        <Button Content="Send Message" FontFamily="Bauhaus 93" FontSize="14" Height="24" HorizontalAlignment="Center" Margin="749,521,9,0" Name="btnSendMessage" VerticalAlignment="Top" Width="142" Grid.Row="1" Click="btnSendMessage_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1" />
                    <GradientStop Color="#80FFFFFF" Offset="0" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</UserControl>
