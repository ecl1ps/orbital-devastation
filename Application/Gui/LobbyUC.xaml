<UserControl x:Class="Orbit.Gui.LobbyUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Orbit.Gui"
             mc:Ignorable="d" x:Name="lobbyWindow"
             d:DesignWidth="1000" d:DesignHeight="700" Width="1000" Height="700" Loaded="lobbyWindow_Loaded">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="700" Width="900">
        <Grid.RowDefinitions>
            <RowDefinition Height="139*" />
            <RowDefinition Height="561*" />
        </Grid.RowDefinitions>
        <Label Name="lblTitle" HorizontalContentAlignment="Center" Width="419" Margin="0,80,0,551" FontFamily="Bauhaus 93" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.RowSpan="2">Tournamnet Lobby</Label>
        <StackPanel Name="spPlayers"  Background="#7D91A0A3" Margin="10,31,370,260" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1">
            <!--
            <controls:LobbyPlayer Width="520" Height="45" />
            <controls:LobbyPlayer Width="520" Height="45"/>
            <controls:LobbyPlayer Width="520" Height="45"/>
            <controls:LobbyPlayer Width="520" Height="45"/>
            -->
        </StackPanel>
        <Grid Name="gridGameInfo" Background="#FFE5E5E5" Margin="555,31,10,260" Grid.Row="1" >
            <Label Name="lblSettings" HorizontalContentAlignment="Center" Width="200" FontFamily="Bauhaus 93" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Top" >Settings</Label>
        </Grid>
        <ListView Height="148" HorizontalAlignment="Left" Margin="12,367,0,0" Name="lvChat" VerticalAlignment="Top" Width="879" Grid.Row="1" />
        <Button Content="Start Game" Height="28" HorizontalAlignment="Center" Margin="91,316,680,0" FontFamily="Bauhaus 93" FontSize="16" Name="btnStartGame" VerticalAlignment="Top" Width="129" Click="btnStartGame_Click" IsEnabled="False" Grid.Row="1">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1" />
                    <GradientStop Color="#80FFFFFF" Offset="0" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Ready" Height="28" HorizontalAlignment="Center" Margin="91,316,680,0" FontFamily="Bauhaus 93" FontSize="16" Name="btnReady" VerticalAlignment="Top" Width="129" Click="btnReady_Click" Grid.Row="1">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1" />
                    <GradientStop Color="#80FFFFFF" Offset="0" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Leave room" Height="28" HorizontalAlignment="Center" Margin="347,316,425,0" FontFamily="Bauhaus 93" FontSize="16" Name="btnLeave" VerticalAlignment="Top" Width="129" Click="btnLeave_Click" Grid.Row="1">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1" />
                    <GradientStop Color="#80FFFFFF" Offset="0" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBox Height="22" HorizontalAlignment="Left" Margin="12,523,0,0" Name="tbMessage" VerticalAlignment="Top" Width="731" KeyDown="tbMessage_KeyDown" Grid.Row="1" />
        <Button Content="Send Message" FontFamily="Bauhaus 93" FontSize="14" Height="24" HorizontalAlignment="Center" Margin="749,521,9,0" Name="btnSendMessage" VerticalAlignment="Top" Width="142" Grid.Row="1" Click="btnSendMessage_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1" />
                    <GradientStop Color="#80FFFFFF" Offset="0" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Change color" FontFamily="Bauhaus 93" FontSize="16" Height="28" HorizontalAlignment="Center" Margin="749,316,22,0" Name="btnColor" VerticalAlignment="Top" Width="129" Grid.Row="1" Click="btnColor_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1" />
                    <GradientStop Color="#80FFFFFF" Offset="0" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Confirm settings" FontFamily="Bauhaus 93" FontSize="16" Height="28" HorizontalAlignment="Center" Margin="579,316,192,0" Name="btnSettings" VerticalAlignment="Top" Width="129" Grid.Row="1">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1" />
                    <GradientStop Color="#80FFFFFF" Offset="0" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label Content="Color must me unique." Grid.Row="1" Height="28" HorizontalAlignment="Left" Margin="89,340,0,0" Name="lblColorNotice" VerticalAlignment="Top" Foreground="#FFFF0A0A" Visibility="Hidden" />
    </Grid>
</UserControl>
