<UserControl x:Class="Orbit.Gui.LobbyUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Orbit.Gui"
             mc:Ignorable="d" x:Name="lobbyWindow"
             d:DesignWidth="1000" d:DesignHeight="700" Width="1000" Height="700" Loaded="lobbyWindow_Loaded">
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="700">
        <Label Name="lblTitle" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="419" Margin="0,36,0,507" FontFamily="Bauhaus 93" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center" >Game Match Lobby</Label>
        <StackPanel Name="spPlayers1"  Background="#7D91A0A3" Margin="12,167,401,269" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">      
        </StackPanel>
        <StackPanel Name="spPlayers2" Background="#0D3D98AA" Margin="401,167,12,269" />
        <ListView Height="148" HorizontalAlignment="Left" Margin="12,506,0,0" Name="lvChat" VerticalAlignment="Top" Width="776" />
        <Button Content="Start Game" Height="28" HorizontalAlignment="Center" Margin="455,455,216,0" FontFamily="Bauhaus 93" FontSize="16" Name="btnStartGame" VerticalAlignment="Top" Width="129" Click="btnStartGame_Click" IsEnabled="False">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1" />
                    <GradientStop Color="#80FFFFFF" Offset="0" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Ready" Height="28" HorizontalAlignment="Center" Margin="455,455,216,0" FontFamily="Bauhaus 93" FontSize="16" Name="btnReady" VerticalAlignment="Top" Width="129" Click="btnReady_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1" />
                    <GradientStop Color="#80FFFFFF" Offset="0" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button Content="Leave room" Height="28" HorizontalAlignment="Center" Margin="616,455,55,0" FontFamily="Bauhaus 93" FontSize="16" Name="btnLeave" VerticalAlignment="Top" Width="129" Click="btnLeave_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="1" />
                    <GradientStop Color="#80FFFFFF" Offset="0" />
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBox Height="22" HorizontalAlignment="Left" Margin="12,662,0,0" Name="tbMessage" VerticalAlignment="Top" Width="776" KeyDown="tbMessage_KeyDown" />
    </Grid>
</UserControl>
