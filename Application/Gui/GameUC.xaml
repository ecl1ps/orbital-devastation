<UserControl x:Class="Orbit.Gui.GameUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Orbit.Gui"
             Width="1000" Height="700" >

    <Canvas x:Name="mainCanvas" MinWidth="400" MinHeight="300" Width="1000" Height="700" HorizontalAlignment="Stretch" VerticalAlignment="Top" Background="White" MouseDown="OnCanvasMouseClick" MouseUp="OnCanvasMouseClick" MouseMove="OnCanvasMouseMove" >
        <Label Canvas.Left="220" Canvas.Top="584" Height="30" Name="lblIntegrityLeft" Width="60" Panel.ZIndex="100" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Label>
        <Label Canvas.Left="723" Canvas.Top="585" Height="30" Name="lblIntegrityRight" Width="60" Panel.ZIndex="100" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Label>
        <Label Canvas.Left="174" Canvas.Top="612" Height="30" Name="lblNameLeft" Width="150" Panel.ZIndex="100" FontSize="15" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Label>
        <Label Canvas.Left="679" Canvas.Top="612" Height="30" Name="lblNameRight" Width="150" Panel.ZIndex="100" FontSize="15" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></Label>
        <Label Canvas.Left="153" Canvas.Top="296" Height="80" Name="lblEndGame" Width="700" Panel.ZIndex="100" FontSize="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Bauhaus 93" Foreground="#FF64008B"></Label>
        <Label Canvas.Left="153" Canvas.Top="230" Content="" Height="59" Name="lblWaiting" Width="700" Panel.ZIndex="100" FontSize="22" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Bauhaus 93" />
        <Label Canvas.Left="153" Canvas.Top="210" Content="" Height="59" Name="lblHighScore" Width="700" Panel.ZIndex="100" FontSize="33" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Bauhaus 93" Foreground="#FFED0000" />

        <Grid Canvas.Left="0" Canvas.Top="650" Panel.ZIndex="100" Height="50" VerticalAlignment="Bottom">
            <controls:ActionBar HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="0,0,0,20" Height="30" Background="DarkGray" MouseUp="OnActionBarClick" x:Name="ActionBarUC"/>
            <StatusBar Height="20" Name="statusBar1" Width="1000" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" >
                <Label Content="TPF: 0" Height="20" Name="statusText1" Width="120" Padding="0" FontSize="11" />
                <Label Height="20" Name="statusText2" Width="120" Padding="0" FontSize="11" />
                <Label Height="20" Name="statusText3" Width="120" Padding="0" FontSize="11" />
                <Label Height="20" Name="statusText4" Width="120" Padding="0" FontSize="11" />
                <Label Height="20" Name="statusText5" Width="120" Padding="0" FontSize="11" />
                <Label Height="20" Name="statusText6" Width="120" Padding="0" FontSize="11" />
                <Label Height="20" Name="statusText7" Width="120" Padding="0" FontSize="11" />
                <Label Height="20" Name="statusText8" Width="120" Padding="0" FontSize="11" />
            </StatusBar>
        </Grid>
    </Canvas>
    
</UserControl>
