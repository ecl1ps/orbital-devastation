<UserControl x:Class="Orbit.Gui.AlertBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Name="AlertBoxUC"
             d:DesignHeight="140" d:DesignWidth="140">
    <Canvas Background="White">
        <TextBlock Name="TextBlock" Canvas.Left="5" Canvas.Top="5" Width="140" Height="140" Text="Testovací text" TextAlignment="Center" FontFamily="Stencil" Foreground="Red" FontSize="20" TextWrapping="Wrap">
        </TextBlock>
        <Grid Name="Panel" Canvas.Left="0" Canvas.Top="0" Width="150" ClipToBounds="True" Panel.ZIndex="1">
            <Grid Name="DoorLeft" HorizontalAlignment="Left" Width="113">
                <Image HorizontalAlignment="Left" Width="85" Height="150" Source="pack://application:,,,/resources/images/background/door_left.png" Margin="0,2,0,0"></Image>
            </Grid>
            <Grid Name="DoorRight" HorizontalAlignment="Right" Width="113">
                <Image HorizontalAlignment="Right" Width="85" Height="150" Source="pack://application:,,,/resources/images/background/door_right.png" Margin="0,-2,0,0"></Image>
            </Grid>
        </Grid>
    </Canvas>
</UserControl>
