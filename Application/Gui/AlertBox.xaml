<UserControl x:Class="Orbit.Gui.AlertBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             Name="AlertBoxUC"
             d:DesignHeight="150" d:DesignWidth="150">
    <Canvas ClipToBounds="True" Height="160" Width="150">
        <Image Name="SprocketLeft" Height="40" Panel.ZIndex="10" Source="pack://application:,,,/resources/images/background/sprocket.png" Canvas.Left="-17" Canvas.Top="-17"></Image>
        <Image Name="SprocketRight" Height="40" Panel.ZIndex="10" Source="pack://application:,,,/resources/images/background/sprocket.png" Canvas.Left="126" Canvas.Top="-17"></Image>
        <TextBlock Name="TextBlock" Background="#FF4A4A4A" Canvas.Left="5" Canvas.Top="15" Width="140" Height="140" Text="Testovací text" TextAlignment="Center" FontFamily="Stencil" Foreground="#FFC7C7C7" FontSize="20" TextWrapping="Wrap">
        </TextBlock>
        <Grid Name="Panel" Canvas.Left="0" Canvas.Top="10" Height="150" Width="150" ClipToBounds="True" Panel.ZIndex="1">
            <Grid Name="DoorLeft" HorizontalAlignment="Left" Width="113">
                <Image HorizontalAlignment="Left" Width="85" Height="150" Source="pack://application:,,,/resources/images/background/door_left.png" Margin="0,2,0,0"></Image>
            </Grid>
            <Grid Name="DoorRight" HorizontalAlignment="Right" Width="113">
                <Image HorizontalAlignment="Right" Width="85" Height="150" Source="pack://application:,,,/resources/images/background/door_right.png" Margin="0,0,0,0"></Image>
            </Grid>
        </Grid>
    </Canvas>
</UserControl>
