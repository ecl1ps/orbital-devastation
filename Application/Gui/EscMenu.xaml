<UserControl x:Class="Orbit.Gui.EscMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             Name="escMenu" mc:Ignorable="d" Style="{StaticResource optionsStyle}">
    <Grid>
        <Button Content="Options" Margin="0,40,0,0" Name="btnOptions" Click="btnOptions_Click" />
        <Button Content="Main Menu" Margin="0,90,0,0" Name="btnMainMenu" Click="btnMainMenu_Click" />
        <Button Content="Exit Game" Margin="0,140,0,0" Name="btnExit" Click="btnExit_Click" />
        <Button Content="Back" Margin="0,0,0,30" VerticalAlignment="Bottom"  Name="btnBack" Click="btnBack_Click" />
    </Grid>
</UserControl>
