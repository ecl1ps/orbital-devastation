<UserControl x:Class="Orbit.Gui.BuyActionWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Border CornerRadius="0.95" BorderBrush="Black" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            <Button Click="OnClick" Name="Button" Grid.Column="0" Grid.Row="0" Width="50">
                <Image Name="ButtonImage" Source="heal-icon.png" Width="50" Height="50"/>
            </Button>
            <Label Background="AntiqueWhite" Grid.Column="1" Width="150" HorizontalAlignment="Right" FontFamily="Andalus" >
                <StackPanel>
                    <TextBlock Name="Header" TextAlignment="Center" TextWrapping="Wrap" Width="150" FontSize="14" FontWeight="ExtraBlack">Upgrade Hook</TextBlock>
                    <TextBlock Name="Price" TextAlignment="Center" TextWrapping="Wrap" Width="150">Multi harpoon Hook</TextBlock>
                </StackPanel>
            </Label>
        </Grid>
    </Border>
</UserControl>
