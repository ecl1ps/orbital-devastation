<Application x:Class="Orbit.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Orbit.Gui">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="resources\styles\Shared.xaml" />
                <ResourceDictionary Source="resources\styles\Button.xaml" />
                <ResourceDictionary Source="resources\styles\Label.xaml" />
                <ResourceDictionary Source="resources\styles\TextBlock.xaml" />
                <ResourceDictionary Source="resources\styles\TextBox.xaml" />
                <ResourceDictionary Source="resources\styles\ToggleButton.xaml" />
                <ResourceDictionary Source="resources\styles\UserControl.xaml" />
                <ResourceDictionary Source="resources\styles\ComboBox.xaml" />
                <ResourceDictionary Source="resources\styles\CheckBox.xaml" />
                <ResourceDictionary Source="resources\styles\Slider.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
